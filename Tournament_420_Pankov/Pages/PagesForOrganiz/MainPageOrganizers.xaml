<Page x:Class="Tournament_420_Pankov.Pages.PagesForOrganiz.MainPageOrganizers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_420_Pankov.Pages.PagesForOrganiz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Loaded="Page_Loaded"
      Title="MainPageOrganizers">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button
                HorizontalAlignment="Left" Width="180" x:Name="BGoToLogin"
                    Content="Login Page"
                    Click="BGoToLogin_Click"/>

            <Button
    HorizontalAlignment="Left" Width="180" x:Name="BGoToCreateTour"
        Content="Создать турнир"
        Click="BGoToCreateTour_Click"/>

            <Button
    HorizontalAlignment="Left" Width="180" x:Name="BGoToparticipantManagement"
        Content="Управление участниками"
        Click="BGoToparticipantManagement_Click"/>

            <Button
    HorizontalAlignment="Left" Width="180" x:Name="BenteringResults"
        Content="Внесение результатов"
        Click="BenteringResults_Click"/>
        </StackPanel>
    </Grid>
</Page>
