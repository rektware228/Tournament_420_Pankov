<Page x:Class="Tournament_420_Pankov.Pages.PagesForUsers.MainPageUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_420_Pankov.Pages.PagesForUsers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPageUsers">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button
            HorizontalAlignment="Left" Width="180" x:Name="BGoToLogin"
                Content="Login Page"
                Click="BGoToLogin_Click"/>

            <Button
HorizontalAlignment="Left" Width="180" x:Name="BViewAllTournaments"
    Content="Посмотреть все турниры"
    Click="BViewAllTournaments_Click"/>

            <Button
HorizontalAlignment="Left" Width="180" x:Name="BGoToRates"
    Content="Рейтинги"
    Click="BGoToRates_Click"/>

            
        </StackPanel>
    </Grid>
</Page>
